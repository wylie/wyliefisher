---
const currentPath = Astro.url.pathname;
const { title } = Astro.props;
---
<nav>
  {currentPath === '/' ? (
    <span class="link inactive">Home</span>
  ) : (
    <a href="/" class="link active" rel="noopener noreferrer" title={title}>Home</a>
  )}
  {currentPath.startsWith('/projects/') ? (
    <span class="link inactive">Projects</span>
  ) : (
    <a href="/projects/" class="link active" rel="noopener noreferrer" title={title}>Projects</a>
  )}
  {currentPath.startsWith('/blog/') ? (
    <span class="link inactive">Blog</span>
  ) : (
    <a href="/blog/" class="link active" rel="noopener noreferrer" title={title}>Blog</a>
  )}
  {currentPath.startsWith('/resume/') ? (
    <span class="link inactive">Resume</span>
  ) : (
    <a href="/resume/" class="link active" rel="noopener noreferrer" title={title}>Resume</a>
  )}
  <a href="https://github.com/wylie" class="link active gh" target="_blank" rel="noopener noreferrer" title={title}>GitHub<span class="material-symbols-outlined gh-icon">open_in_new</span></a>
</nav>
  
<style>
  nav {
    display: flex;
    flex-wrap: wrap;
    gap: 0 .5rem;
    border-bottom: 3px solid var(--border-color);
    align-items: center;
  }
  .link {
    padding: .5rem;
  }
  .inactive {
    text-decoration: none;
  }
  a.active,
  a:hover {
    text-decoration: underline;
  }
  .link.gh {
    display: flex;
    gap: .25rem;
    align-items: center;
    text-decoration: none;
    position: relative;
  }
  .link.gh::after {
    content: '';
    position: absolute;
    bottom: 10px;
    left: 8px;
    width: 50px;
    height: 1px;
    background-color: var(--text-color);
  }
  .gh-icon {
    font-size: 14px;
  }
</style>